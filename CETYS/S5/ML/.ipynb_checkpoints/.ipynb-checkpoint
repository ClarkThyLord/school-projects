    "result = \"\"\n",
    "for pos in range(81):\n",
    "    x = pos % 9\n",
    "    y = int(pos / 9)\n",
    "    if x == 9 - 1:\n",
    "        result += \"*\\n\"\n",
    "    elif x == 0 or y == 0 or y == 9 - 1:\n",
    "        result += \"*\"\n",
    "    else:\n",
    "        result += \" \"\n",
    "print(result)"
   ]
