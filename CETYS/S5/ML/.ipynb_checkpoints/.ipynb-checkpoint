    "size = 0\n",
    "while True:\n",
    "    try:\n",
    "        size = int(input(\"TamaÃ±o de Base: \"))\n",
    "        if size > 0: break\n",
    "    except ValueError: pass\n",
    "\n",
    "\n",
    "result = \"\"\n",
    "for l in range(size):\n",
    "        print(\"level: \", l)\n",
    "        center = int(size / 2)\n",
    "        offset = l * 2\n",
    "    for c in range(size):\n",
    "        \n",
    "        if c == center or c < center + offset and c > center - offset:\n",
    "            result += \"*\"\n",
    "        else:\n",
    "            result += \" \"\n",
    "        \n",
    "        if c == size - 1:\n",
    "            result += \"\\n\"\n",
    "print(result)"
